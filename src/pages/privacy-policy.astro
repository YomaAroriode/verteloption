    content:
      "If you have any questions regarding our Privacy Policy or wish to exercise your data rights, please contact us at **privacy@vertexoption.com**.",
  },
];
---

<Layout>
  <section class="box mb-20 mt-10 px-6 py-12">
    <p class="text-4xl font-semibold">Privacy Policy</p>

    <div class="mt-10 flex flex-col gap-10">
      {
        privacyPolicy.map(({ title, content }) => (
          <div>
            <p class="text-lg font-bold">{title}</p>
            <p class="mt-3 whitespace-pre-line text-[#95A0B6]">{content}</p>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
