---
interface Item {
  name: string;
  subtitle: string;
  logo: string;
}

interface Props {
  items: Item[];
}

const { items }: Props = Astro.props;
---

<div class="flex flex-col gap-5 md:flex-row">
  {
    items.map((item: Item) => (
      <div class="card">
        <div class="flex flex-row gap-2">
          <img
            src={`/images/${item.logo}`}
            alt={item.name}
            class="platform-logo"
          />
          <p>{item.name}</p>
        </div>
        <p class="platform-version text-center">{item.subtitle}</p>
      </div>
    ))
  }
</div>
