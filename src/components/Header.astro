---
import { siteName } from "../config";
---

<header
  class="bg-linear-to-r from-[rgb(24, 33, 50)] to-[rgba(27, 71, 125, 1)] md:py-13 flex h-14 flex-row items-center justify-between gap-3 rounded-md py-3 text-white drop-shadow-sm"
>
  <button
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="white"
      class="size-7"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
    </svg>
  </button>

  <div class="hidden flex-row gap-2 sm:flex">
    <img src="" alt="logo" />
    <p class="text-2xl text-white">{siteName}</p>
  </div>

  <div class="flex flex-row items-center gap-5">
    <a
      href="#"
      class="rounded-lg px-5 py-2 text-sm transition duration-300 ease-in-out hover:bg-blue-900"
    >
      Login
    </a>

    <a
      href="#"
      class="border-1 flex items-center gap-5 rounded-md border-blue-500 py-2 pl-5 pr-3 text-sm transition duration-300 ease-in-out hover:bg-blue-900/50"
    >
      Register
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 30 30"
        stroke-width="1.5"
        stroke="lightblue"
        class="size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
      </svg>
    </a>
  </div>
</header>
